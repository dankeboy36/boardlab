{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "packages/extension/src",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "exclude": [
    "packages/webviews",
    "packages/protocol",
    "packages/services",
    "out"
  ],
  "include": ["packages/extension/src/**/*"]
}
